---

<ul>
  <li class="category">
    <p>{data.category}</p>
    <ul class="subcategory">
      <li>
        {
          subcategories
            .filter(sub => sub.category_id === data.id)
            .map(sub => <NavSub data={sub} />)
        }
      </li>
    </ul>
  </li>
</ul>

<style>
  .category {
    padding: 1em 2em;
    max-width: 150px;
    width: auto;
    margin: auto;
    background-color: red;
    color: white;
  }

  .category:hover {
    background-color: orangered;
  }

  ul,
  li {
    list-style: none;
    display: grid;
    gap: 20px;
    position: relative;
  }

  a,
  .subcategory {
    background-color: aquamarine;
    padding: 1em 2em;
    border: solid 1px;
    text-decoration: none;
  }

  a:hover {
    background-color: blue;
    color: white;
  }

  .subcategory {
    list-style: none;
    padding: 1em;
    display: grid;
    gap: 1em;
  }

  ul ul {
    position: absolute;
    top: 100%;
    display: none;
  }

  ul li:hover > ul {
    display: inherit;
  }
</style>
