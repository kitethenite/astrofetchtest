---

<ul>
  <li>
    <div class="category">
      <p>{data.category}</p>
    </div>
    <ul class="subcategory">
      <li>
        {
          subcategories
            .filter((sub) => sub.category_id === data.id)
            .map((sub) => <NavSub data={sub} />)
        }
      </li>
    </ul>
  </li>
</ul>

<style>
  .category {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: red;


  }

  .category:last-of-type {
    place-content: center;
  }

  p {
    text-align: center;
    color: white;
    max-width: 160px;
    height: 40px;


  }

  .category:hover {
    background-color: orangered;
  }

  ul,
  li {
    list-style: none;
    position: relative;
  }

  a,
  .subcategory {
    background-color: aquamarine;
    padding: 1em 2em;
    border: solid 1px;
    text-decoration: none;
  }

  a:hover {
    background-color: blue;
    color: white;
  }

  .subcategory {
    list-style: none;
    padding: 1em;
    display: grid;
    gap: 1em;
  }

  ul ul {
    position: absolute;
    top: 100%;
    display: none;
  }

  ul li:hover > ul {
    display: inherit;
  }
</style>
