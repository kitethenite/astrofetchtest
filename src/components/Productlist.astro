---
const { data } = Astro.props;
---

<a href={`shop/${data.subcategory_name}/items/${data.slug}`}>
  <article class="productlist">
    <img src={data.image} alt="text" />
    <h3>{data.title}</h3>
    <div class="price">{data.price} DKK</div>
    <div class="stock">{data.in_stock}</div>
    <div class="buy">Tilf√∏j kurv</div>
  </article>
</a>

<style>
  .productlist {
    width: 100%;
    max-width: 320px;
    /* border: solid 1px; */
    height: 100%;
    max-height: 480px;
  }

  img {
    width: 100%;
    aspect-ratio: 4/3;
    object-fit: cover;
  }

  a {
    text-decoration: none;
background-color: red;
  }

  .buy {
    background-color: rgb(255, 253, 251);
    padding: 1em;
    width: fit-content;
  }
</style>